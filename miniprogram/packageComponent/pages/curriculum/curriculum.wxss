/* packageComponent/pages/ppt/ppt.wxss */
@import "../../../common/index.wxss";

.curriculum-root {
  padding: 24px;
  display: grid;
  grid-template-columns: repeat(2, calc(50% - 5px));
  /* grid-template-rows: repeat(auto-fill, 150px); */
  column-gap: 10px;
  row-gap: 20px;
}

.curriculum-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  /* width: calc(50% - 12px); */
}

.curriculum-img {
  width: 100%;
  /* height: 100px; */
  object-fit: cover;
}

.curriculum-txt {
  color: rgb(231, 115, 37);
}